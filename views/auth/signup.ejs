
<!DOCTYPE html>
<html>
  <%- include('../head') -%>
  <link rel="stylesheet" type="text/css" href="/stylesheets/landing.css" />
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" />
  <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css" />
  <body>
    <%- include('../navbar') -%>
    <div class="landing-main">
		<!-- Banner -->
			<div id="particles-js""></div>
			<section id="banner">
				<div class="inner">
					<h2 class="major special">
						<span>
							Your vibe attracts your tribe
						</span>
					</h2>
					<!--<p>to organizations adopting Opensource</p>-->
					<ul class="actions special stacked">
						<li style="background: rgba(72,72,72,0.7); border: 2px solid #f9c038;">
              <form class="form-box" action="/account/new" method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <label class="text-muted">First Name<span class="required">*</span></label>
                  <input type="text" placeholder="your_first_name" class="form-control" name="firstname" required>
                  <label class="text-muted">Last Name<span class="required">*</span></label>
                  <input type="text" placeholder="your_last_name" class="form-control" name="name" required>
                </div>
                <div class="form-group">
                  <label class="text-muted">Username<span class="required">*</span></label>
                  <input type="text" placeholder="your_user_name" class="form-control" name="username" required>
                </div>
                <div class="form-group">
                  <label class="text-muted">Email<span class="required">*</span></label>
                  <input type="text" placeholder="your_email" class="form-control" name="email" required>
                </div>
								<div class="form-group">
										<label class="text-muted">Password<span class="required">*</span></label>
										<input type="password" placeholder="the_secret" class="form-control" name="password" required>
                </div>
                <div class="form-group">
                  <label class="text-muted">Confirm Password<span class="required">*</span></label>
                  <input type="password" placeholder="confirm_the_secret" class="form-control" name="password2" required>
                </div>
								<button type="submit" class="btn btn-action btn-warning">CREATE ACCOUNT</button>
							</form>
							<hr>
							<span class="text-muted">Already a member? <a href="/">Sign in now!</a> </span>	
						</li>
					</ul>
				</div>
			</section>
			<!-- One -->
			<section id="one" class="wrapper alt style2">
			</section>
		</div>	
		<%- include('../footer') -%>
    <div id="notify_message" class="notify_message-success"></div>
  </body>

  
  <script src="/animations/jquery-sakura.min.js"></script>
  <script src="/javascripts/classie.js"></script>
  <script src="/javascripts/jquery.min.js"></script>
  <script src="/javascripts/browser.min.js"></script>
  <script src="/javascripts/breakpoints.min.js"></script>
	<script src="/javascripts/main.js"></script>
	<script src="/javascripts/jquery.scrolly.min.js"></script>
	<script src="/javascripts/util.js"></script>
	<script type="text/javascript" src="/javascripts/particles.min.js"></script>
	<script type="text/javascript">
	particlesJS("particles-js", {
      interactivity: {
        detect_on: "canvas",
        events: {
          onhover: {
            enable: false
          },
          onclick: {
            enable: false
          },
          resize: true
        }
      },
      events: {
        onresize: {
          enable: true,
          density_auto: true,
          density_area: 400 // nb_particles = particles.nb * (canvas width *  canvas height / 1000) / density_area
        },
        onclick: {
          enable: false
        }
      },
      particles: {
        number: { value: 25, density: { enable: true, value_area: 400 } },
        color: { value: ["#f9f8eb", "#76b39d", "#155263", "#f0b917", "#7f3b42"] },
        shape: {
          type: "circle",
          stroke: { width: 0, color: "#fff" },
          polygon: { nb_sides: 5 }
        },
        opacity: {
          value: 0.7,
          random: false,
          anim: { enable: false, speed: 1, opacity_min: 0.1, sync: false }
        },
        line_linked: {
          enable: false
        },
        size: {
          value: 10,
          random: true,
          anim: { enable: false, speed: 40, size_min: 0.1, sync: false }
        },
        move: {
          enable: true,
          speed: 7,
          direction: "none",
          random: true,
          straight: false,
          out_mode: "out",
          bounce: true,
          attract: { enable: false, rotateX: 600, rotateY: 1200 }
        }
      },
      retina_detect: true
    });
  
	</script>
</html>

